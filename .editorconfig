# Top-level editor settings
root = true

# Python files
[*.py]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true

# Text files
[*.txt]
charset = utf-8
end_of_line = lf
insert_final_newline = true
